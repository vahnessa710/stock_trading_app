<div class = "sessions-new-container">
  <div class = "left">
    <div class = "catch-container">
      <p class = "catch-tag">Catch Your Next Trading Opportunity</p>
      <p class = "under-catch-tag">Your funds are always backed 1:1 on TradeApp with our regularly published audits on our Proof of Reserves</p>
    </div>
  </div>
  <div class = "right">
    <div class = "login-form-container">
      <h1>Sign up</h1>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

          <div class="field">
            <%= f.text_field :first_name, autocomplete: "given-name", placeholder: "First Name", class: "sign-in-form" %>
          </div>

        <div class="field">
          <%= f.text_field :last_name, autocomplete: "family-name", placeholder: "Last Name", class: "sign-in-form" %>
        </div>

        <div class="field">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "âœ‰ Email", class: "sign-in-form" %>
          <% if resource.errors[:email].present? %>
            <div class="error-message">
              <p>Email <%= resource.errors[:email].first %></p>
            </div>
          <% end %>
        </div>

        <div class="field">
          <%= f.password_field :password, autocomplete: "current-password", placeholder: "ðŸ”’ï¸Ž Password", class: "sign-in-form"  %>
          <% if resource.errors[:password].present? %> 
            <div class = "error-message">
              <p>Password <%= resource.errors[:password].first %></p>
            </div>
          <% end %>
        </div>

        <div class="field">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-input", placeholder: "ðŸ”’ï¸Ž Confirm Password", class: "sign-in-form" %>
          <% if resource.errors[:password_confirmation].present? %>
            <div class="error-message">
              <p><%= resource.errors[:password_confirmation].first %></p>
            </div>
          <% end %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>